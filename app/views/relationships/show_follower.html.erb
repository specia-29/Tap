<div class="container">
  <div class="row">
    <div class="col-lg-8 mx-auto">
      <table class="table">
        <tbody>
          <% @user.followers.each do |user| %>
            <tr>
              <td>
              <%= link_to public_user_path(user) do %>
                  <% if user.profile_image.attached? %>
                    <%= image_tag user.profile_image, class: "rounded-circle", size: "60x60" %>
                  <% else %>
                    <%= image_tag 'no_image', class: "rounded-circle", size: "60x60" %>
                  <% end %>
                </td>
              <% end %>
              <td class="align-middle">
                <% if user_signed_in? %>
                  <%= link_to user.user_name, public_user_path(user), class: "text-dark" %>
                <% else %>
                  <%= link_to user.user_name, admin_user_path(user), class: "text-dark" %>
                <% end %>
              </td>
              <td></td>
              <td></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>