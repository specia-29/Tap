
<%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, method: :post %>

  <% if @article.liked_by?(current_user) %>
    <p>
      <%= link_to public_root_path(@article), method: :delete do %>
        ♥<%= @article.likes.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to public_root_path(@article), method: :post do %>
        ♡<%= @article.likes.count %> いいね
      <% end %>
    </p>
  <% end %>

  <div>
  <p>コメント件数：<%= @article.comments.count %></p>
  <% @article.comments.each do |comment| %>
    <p><%= image_tag comment.user.get_profile_image(80,80) %></p>
    <%= comment.user.user_name %>
    <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %>
  <% end %>
</div>
<div>
  <%= form_with model: [@article, @article_comment] do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>