<div class="container">
  <div class="row">
      <% @articles.each do |article| %>
      <div class="col-lg-12 mt-3">
        <%#= link_to, public_article_path(@article) do %>
          <%= image_tag article.user.profile_image, class: "rounded-circle", size: "50x50" %>
          <%= article.user.user_name %><br>
        <%# end %>
          <%= image_tag article.post_image, size: '900x600' %><br>
          <%= safe_join(article.body.split("\n"),tag(:br))%><br>
      </div>
      <% end %>
  </div>
</div>