<h1>ユーザー詳細ページ</h1>
<h3><%= @user.user_name %></h3>
<h2>投稿内容</h2>
<% @user.articles.each do |article| %>
  <a href="/posts/<%= article.id %>"><%= article.post_image %></a>
  <hr>
<% end %>
<h3>いいねしている投稿</h3>
<% @user.liked_articles.each do |article| %>
  <%= article.user.user_name %>
  <%= article.post_image %>
<% end %>