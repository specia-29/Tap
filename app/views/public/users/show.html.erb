<div class="container border-right border-left">
  <div class="row border-bottom">
      <div class="col-lg-3 p-4">
        <% if @user.profile_image.attached? %>
          <%= image_tag @user.profile_image, class: "rounded-circle", size: "180x180" %>
        <% else %>
          <%= image_tag 'no_image', class: "rounded-circle", size: "180x180" %>
        <% end %>
      </div>

      <div class="col-lg-6 p-4">
        <p class="font-weight-bold"><%= @user.user_name %></p>
        <%= safe_join(@user.introduction.split("\n"),tag(:br)) %><br>
        <div class="pt-3 pb-1">
          <%= link_to followings_path do %>
            フォロー
            <%= @user.followings.count %>
          <% end %>
        </div>
          <%= link_to followers_path do %>
            フォロワー
            <%= @user.followers.count %>
          <% end %>
      </div>
      <div class="col-lg-3 p-4">
        <% if @user == current_user %>
          <%= link_to "プロフィール編集", edit_public_user_path(current_user), class: "btn btn-success" %>
        <% else %>
          <%= render 'relationships/follow_button', user: @user %>
        <% end %>
      </div>
  </div>
  <% @articles.each do |article| %>
    <%= link_to public_article_path(article.id) do %>
      <%= image_tag article.post_image, class: "m-3", size: "333x222" %>
    <% end %>
  <% end %>
</div>
