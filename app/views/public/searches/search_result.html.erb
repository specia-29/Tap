<div class="container border-right border-left">
  <h2 class="m-2">検索結果</h2>
  <div class="row">
    <div class="col-lg-12 center-block"></div>

  <!--検索対象モデルがUserの時 -->
  <table class="table table-hover table-inverse">
    <% if @range == "ユーザー" %>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= link_to public_user_path(user) do %>
                <%= image_tag user.profile_image, class: "rounded-circle", size: "60x60" %>
              <% end %>
            </td>
            <td class="align-middle"><%= link_to user.user_name, public_user_path(user), class: "text-dark" %></td>
            <td class="align-middle"><%#= render 'public/users/follow_form' %></td>
            <td class="align-middle"><%= render 'public/users/stats' %></td>
  　　　    </tr>
        <% end %>
      </tbody>
        <% else %>
        <!--検索対象モデルがUserではない時(= 検索対象モデルがArticleの時) -->
          <% @articles.each do |article| %>
            <%= link_to public_article_path(article.id) do %>
              <%= image_tag article.post_image, class: "m-3", size: "345x230" %>
            <% end %>
          <% end %>
      <% end %>

    </div>
  </div>
</div>