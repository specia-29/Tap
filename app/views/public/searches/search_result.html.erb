<h2>検索結果</h2>

<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時 -->
  <% if @range == "User" %>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.profile_image %></td>
          <td><%= user.user_name %></td>
          <td><%#= render 'public/users/follow_form' %></td>
　　　    <td><%= render 'public/users/stats' %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがArticleの時) -->
    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td><%= article.post_image %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>