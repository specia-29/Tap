<div class="container border-right border-left">
  <div class="row border-bottom">
    <div class="col-lg-3 p-4">
      <% if @user.profile_image.attached? %>
        <%= image_tag @user.profile_image, class: "rounded-circle", size: "180x180" %>
      <% else %>
        <%= image_tag 'no_image', class: "rounded-circle", size: "180x180" %>
      <% end %>
    </div>

    <div class="col-lg-6 p-4">
      <p class="font-weight-bold"><%= @user.user_name %></p>
      <%= safe_join(@user.introduction.split("\n"),tag(:br)) %><br>
      <div class="pt-3 pb-1">
        <%= link_to followings_path, class: 'text-muted' do %>
          フォロー
          <%= @user.followings.count %>人
        <% end %>
      </div>
        <%= link_to followers_path, class: 'text-muted' do %>
          フォロワー
          <%= @user.followers.count %>人
        <% end %>
      </div>
    <div class="col-lg-3 p-4">
      <%= link_to "編集する", edit_admin_user_path(@user), class: "btn btn-success" %>
      <%= form_with model: @user, url: public_article_path do |f| %>
      <% end %>
    </div>
  </div>
  <% @articles.each do |article| %>
    <%= link_to admin_article_path(article.id) do %>
      <%= image_tag article.post_image, class: "m-3", size: "333x222" %>
    <% end %>
  <% end %>
</div>